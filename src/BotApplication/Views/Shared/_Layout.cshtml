<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BoT</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/materialize.min.css" rel="stylesheet" type="text/css" />
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <header>
        <div class="fixed-action-btn" style="bottom: 90px; right: 20px;">
            <a class="btn-floating btn-large amber">
                <i class="large material-icons">mode_edit</i>
            </a>
            <ul>
                <li><a class="btn-floating light-green darken-2"><i class="material-icons">insert_chart</i></a></li>
                <li><a class="btn-floating light-green darken-2"><i class="material-icons">format_quote</i></a></li>
                <li><a class="btn-floating light-green darken-2"><i class="material-icons">publish</i></a></li>
                <li><a class="btn-floating light-green darken-2"><i class="material-icons">attach_file</i></a></li>
            </ul>
        </div>
        <div class="row light-green darken-2">
            <div class="col l3 offset-l9 right-align">
                <a href="#" title="User name">User name</a>
            </div>
        </div>
        
        <nav class="light-green">
            <div class="nav-wrapper">
                <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
                <ul class="side-nav" id="mobile-demo">
                    <li>@Html.ActionLink("Candidates", "#", "#")</li>
                    <li>@Html.ActionLink("Vacancies", "#", "#")</li>
                    <li>@Html.ActionLink("Statistic", "#", "#")</li>
                    <li>@Html.ActionLink("Calendar", "#", "#")</li>
                </ul>
                <div class="row">
                    <div class="col l3 offset-l1">
                        <ul id="nav-mobile" class="right hide-on-med-and-down">
                            <li class="navtableft">@Html.ActionLink("Candidates", "#", "#")</li>
                            <li class="navtab">@Html.ActionLink("Vacancies", "#", "#")</li>
                        </ul>
                    </div>
                    <div class="col l4 center-align">
                        <a href="#" title="Home">
                            <p class="center-align">ISD BASE OF TALENTS</p>
                        </a>
                    </div>
                    <div class="col l3">
                        <ul id="nav-mobile" class="left hide-on-med-and-down">
                            <li class="navtableft">@Html.ActionLink("Statistic", "#", "#")</li>
                            <li class="navtab">@Html.ActionLink("Calendar", "#", "#")</li>
                        </ul>
                    </div>
                    <div class="col l1 no-padding">
                        <a class='dropdown-button btn-flat ' href='#' data-activates='dropdown1'><i class="material-icons settingsicon">settings</i></a>
                        <ul id='dropdown1' class='dropdown-content'>
                            <li><a href="#" class="downmenu">User settings</a></li>
                            <li class="divider"></li>
                            <li><a href="#" class="downmenu">Admin settings</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div>
    </div>

@RenderBody()

    <footer class="grey darken-4">
            <div class="row">
                <div class=" coll 112" >
                    <p class="white-text">
                        Base of Talents <br>
                        © ISD Professional recruitment software
                    </p>
                </div>
            </div>
    </footer>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/materialize.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".button-collapse").sideNav();
        })
    </script>

</body>
</html>