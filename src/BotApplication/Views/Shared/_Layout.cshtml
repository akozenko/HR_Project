<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BoT</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/materialize.min.css" rel="stylesheet" type="text/css" />
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <header>
        <div class="row light-green lighten-5">
            <div class="col s12 col m4 offset-m4 col l2 offset-l5"><p class="logotext center-align">ISD</p></div>
        </div>
        <div class="row light-green lighten-5">
            <div class="col s12 col m4 offset-m4 col l4 offset-l4"><p class="logotext center-align">BASE OF TALENTS</p></div>
            <div class="col s12 col m5 offset-m2  col l2">
                <a class="btn-floating btn-small waves-effect waves-light grey"><i class="material-icons">settings</i></a>
                @Html.ActionLink("Admin settings", "#", "#", new { @class = "setting" })
            </div>
            <div class="col s12 col m5 col l2">
                <a class="btn-floating btn-small waves-effect waves-light grey"><i class="material-icons">perm_identity</i></a>
                @Html.ActionLink("User Name", "#", "#", new { @class = "setting" })
            </div>
        </div>
        <nav class="light-green lighten-1">
            <div class="nav-wrapper">
                <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a> 
                <ul class="side-nav" id="mobile-demo">
                    <li>@Html.ActionLink("Candidates", "#", "#")</li>
                    <li>@Html.ActionLink("Vacancies", "#", "#")</li>
                    <li>@Html.ActionLink("Statistic", "#", "#")</li>
                    <li>@Html.ActionLink("Calendar", "#", "#")</li>
                </ul>
                <div class="row">
                    <div class="col m5 col l4">
                        <ul id="nav-mobile" class="right hide-on-med-and-down">
                            <li class="navtableft">@Html.ActionLink("Candidates", "#", "#")</li>
                            <li class="navtab">@Html.ActionLink("Vacancies", "#", "#")</li>
                        </ul>
                    </div>
                    <div class="col m2 col l2 offset-l1 center-align">
                        <a href="#"><img class="logo" src="~/Content/Images/Logo.png"></a>  
                    </div>
                    <div class="col m5 col l4 offset-l1">
                        <ul id="nav-mobile" class="left hide-on-med-and-down">
                            <li class="navtableft">@Html.ActionLink("Statistic", "#", "#")</li>
                            <li class="navtab">@Html.ActionLink("Calendar", "#", "#")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div>
    </div>

@RenderBody()

    <footer class="grey darken-3">
            <div class="row">
                <div class=" coll 112" >
                    <p class="white-text">
                        Base of Talents <br>
                        © ISD Professional recruitment software
                    </p>
                </div>
            </div>
    </footer>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/materialize.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".button-collapse").sideNav();
        })
    </script>

</body>
</html>