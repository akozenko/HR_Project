<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BoT</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/materialize.min.css" rel="stylesheet" type="text/css" />
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <header>
        <div class="row logorow">
            <div class="col l2 offset-l5"><p class="logotext center-align">ISD</p></div>
            <div class="col l1 offset-l3">@Html.ActionLink("User Name", "#", "#")</div>
            <div class="col l1">
                @Html.ActionLink("Ru", "#", "#")
                    @Html.ActionLink("En", "#", "#")
            </div>
        </div>
        <div class="row">
            <div class="col s12 m4 l2 offset-l5"><p class="logotext center-align">BASE OF TALENTS</p></div>
            <div class="col l2 offset-l1">
                <i class="small material-icons">settings</i>
                @Html.ActionLink("Admin settings", "#", "#")
            </div>
            <div class="col l2">
                <i class="small material-icons">settings</i>
                @Html.ActionLink("User settings", "#", "#")
            </div>

        </div>
        <nav class="light-green lighten-1">
            <div class="nav-wrapper">
                <div class="row">
                    <div class="col s12 m3 l3 offset-l1">
                        <ul id="nav-mobile" class="right hide-on-med-and-down">
                            <li class="navtableft">@Html.ActionLink("Candidates", "#", "#")</li>
                            <li class="navtab">@Html.ActionLink("Vacancies", "#", "#")</li>
                        </ul>
                    </div>
                    <div class="col s12 m2 l2 offset-l1 center-align">
                        <a href="#"><img class="logo" src="~/Content/Images/Logo.png"></a>  
                    </div>
                    <div class="col s12 m3 l3 offset-l1">
                        <ul id="nav-mobile" class="left hide-on-med-and-down">
                            <li class="navtableft">@Html.ActionLink("Statistic", "#", "#")</li>
                            <li class="navtab">@Html.ActionLink("Calendar", "#", "#")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()
    <footer class="grey lighten-1">
        <div class="container">
            <div class="row">
                <div class="l12">
                    <p>
                        Base of Talents <br>
                        © ISD Professional recruitment software
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/materialize.min.js"></script>
</body>
</html>